<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Activity.TowningFormScreen">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/normalUserr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="Normal User"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />


                <RadioButton
                    android:id="@+id/vipUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d_5dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="VIP User"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />

                <RadioButton
                    android:id="@+id/onlineUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d_5dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:text="Online User"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/twowheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d_5dp"
                    android:text="2W"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/threeWheelerR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3W"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/fourwheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4W"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/othrheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />


            </RadioGroup>

            <LinearLayout
                android:id="@+id/normalUserVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/etStateCode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/d_10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:capitalize="characters"
                    android:digits="QWERTZUIOPASDFGHJKLYXCVBNM"
                    android:gravity="center"
                    android:hint="MP"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="@dimen/d_5dp"
                    android:textSize="@dimen/_19sdp" />

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_background" />

                <EditText
                    android:id="@+id/etCityCode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/d_10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:capitalize="characters"
                    android:gravity="center"
                    android:hint="07"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="@dimen/d_5dp"

                    android:textSize="@dimen/_19sdp" />

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_background" />

                <EditText
                    android:id="@+id/etVehicleCode"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/d_10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:capitalize="characters"
                    android:digits="QWERTZUIOPASDFGHJKLYXCVBNM"
                    android:gravity="center"
                    android:hint="MQ"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="@dimen/d_5dp"

                    android:textSize="@dimen/_19sdp" />


                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/color_background" />

                <EditText
                    android:id="@+id/etVehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/d_10dp"
                    android:layout_weight=".2"
                    android:background="@android:color/white"
                    android:capitalize="characters"
                    android:gravity="center"
                    android:hint="vehicle No"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:padding="@dimen/d_5dp"
                    android:textSize="@dimen/_19sdp" />


                <Button
                    android:id="@+id/getTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_5sdp"
                    android:text="Get Time"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/getTime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/chechinTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Name :     "
                android:imeOptions="actionNext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Name :     "
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:hint="Mobile Number :"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/rcnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:digits="QWERTZUIOPASDFGHJKLYXCVBNMqwertzuopasdfghjklxcvbnm1234567890"
                android:hint="RC Number :"
                android:imeOptions="actionNext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/storelocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center" />
            </LinearLayout>

            <!--<Spinner-->
            <!--android:id="@+id/storelocation"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:gravity="center" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/cardview_dark_background" />


            <EditText
                android:id="@+id/idNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:digits="QWERTZUIOPASDFGHJKLYXCVBNMqwertzuopasdfghjklxcvbnm1234567890"
                android:hint="ID Number :"
                android:imeOptions="actionNext"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/vm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Take Image"
                    android:textColor="@color/text_color_light_black"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/vm"
                    android:src="@drawable/camea" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/idPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_below="@+id/vm"
                    android:src="@mipmap/police_car512"

                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/buttongradient"
                android:imeOptions="actionDone"
                android:text="Submit"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:theme="@style/CheckBoxTheme" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>