             />-->

        <RadioButton
            android:id="@+id/Gate2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/d_5dp"
            android:layout_marginRight="@dimen/d_5dp"
            android:text="Gate2"
            android:textColor="@color/colorPrimary"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/Gate3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/d_5dp"
            android:layout_marginRight="@dimen/d_5dp"
            android:text="Gate3"
            android:textColor="@color/colorPrimary"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/Gate4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/d_5dp"
            android:layout_marginRight="@dimen/d_5dp"
            android:text="Gate4"
            android:textColor="@color/colorPrimary"
            android:visibility="visible" />

        <!--<ImageView
            android:id="@+id/wheeler4"
            android:layout_width="@dimen/d_90dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/police_car512" />-->
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGate"
        android:layout_margin="@dimen/d_30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10dp"
            android:layout_marginRight="@dimen/d_10dp"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10dp"
            android:layout_marginRight="@dimen/d_10dp"
            android:background="@color/colorPrimary"
            android:text="Cancel"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />


    </LinearLayout>
