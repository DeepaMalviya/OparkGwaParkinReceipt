//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="Theme.Translucent.NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="ActionBarThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Heading">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubHeader">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HeadingDarkPrimary" parent="@style/Heading">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleDarkPrimary" parent="@style/Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubHeaderDarkPrimary" parent="@style/SubHeader">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyDarkPrimary" parent="@style/Body">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body1DarkPrimary" parent="@style/Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CaptionDarkPrimary" parent="@style/Caption">
        <item name="android:textColor">@color/white</item>
    </style>







    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>



    <style name="borderless_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeSpinner">
        <item name="colorAccent">#ffa000</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>






    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">5sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>



    <style name="RadioButtonTheme" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>


</resources>
